{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "standard",
    "plugin:tailwindcss/recommended",
    "plugin:import/recommended",    // for import/no-unused-modules
    "plugin:import/typescript",
    "prettier"
  ],
  "plugins": [
    "import"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    // keep any overrides you really need:
    "react/no-unescaped-entities": 0,

    // turn off every other “unused” rule:
    "no-unused-vars":       "off",
    "no-undef":             "off",

    // ---------------------------------------------------------
    // orphan-file checker: scan only `app/` (add more if needed)
    // ---------------------------------------------------------
    "import/no-unused-modules": [
      "warn",
      {
        "unusedExports": true,
        "src": ["app"]     // ← point this at your code dirs
      }
    ]
  },
  "settings": {
    "tailwindcss": {
      "groupByResponsive": true,
      "prependCustom":      true,
      "officialSorting":    true
    },
    "import/resolver": {
      "typescript": {}
    }
  }
}
